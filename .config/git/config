[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[difftool "nvimdiff"]
	cmd = nvim -f -d \"$LOCAL\" \"$REMOTE\"
[mergetool "nvimdiff"]
	cmd = nvim -f -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[alias]
	staash = stash --include-untracked
	rs = restore --staged
	res = restore
[core]
	hooksPath = /home/franco/.config/git/hooks
