#!/bin/sh

sinks_info=()
while IFS= read -r line; do
  sinks_info+=("$line")
done < <(pactl list sinks | rg "Sink|Name|Description" | cut -d' ' -f2- | awk 'ORS=NR%3?",":RS' | cut -c 2-)
for sink in "${sinks_info[@]}"; do
  echo $sink
done

